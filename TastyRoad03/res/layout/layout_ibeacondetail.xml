<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.pebBletestapp.MainActivity$PlaceholderFragment" >
    
	     <RelativeLayout
	        android:id="@+id/menu_bar"
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:background="@drawable/bar_title" >

			        <TextView
			            android:id="@+id/title_txt"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical|center_horizontal"
			            android:text="Tasty Road"
			             android:textStyle="bold"
			            android:background="#ff8c00"
			            android:textColor="#ffffff"
			            android:typeface="serif"
			            android:textSize="18sp" />
			
			        <ImageButton
			            android:id="@+id/btn_back"
			            android:layout_width="30dip"
			            android:layout_height="30dip"
			            android:layout_marginLeft="15dp"
			            android:layout_marginTop="14dp"
			            
			            android:background="@drawable/btn_back" />
    	</RelativeLayout>

	    <ScrollView
	        android:id="@+id/scroll_view_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/menu_bar"
	        android:layout_centerHorizontal="true" >

			        <LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="332dp"
			            android:orientation="vertical" >

					            <RelativeLayout
					                android:id="@+id/box1"
					                android:layout_width="match_parent"
					                android:layout_height="wrap_content"
					                android:layout_marginLeft="5dp"
					                android:layout_marginRight="5dp" >

					                        <ImageView
							                    android:id="@+id/food_detail_1"
							                    android:layout_width="match_parent"
							                    android:layout_height="wrap_content"
							                    android:adjustViewBounds="true"
							                    android:scaleType="fitCenter"/>
							
							                <ImageView
							                    android:id="@+id/food_detail_2"
							                    android:layout_width="match_parent"
							                    android:layout_height="wrap_content"
							                    android:layout_below="@+id/food_detail_1"
							                    android:adjustViewBounds="true" />
							
							                <ImageView
							                    android:id="@+id/food_detail_3"
							                    android:layout_width="match_parent"
							                    android:layout_height="wrap_content"
							                    android:layout_alignParentLeft="true"
							                    android:layout_alignParentRight="true"
							                    android:layout_below="@+id/food_detail_2"
							                    android:adjustViewBounds="true"
							                    android:scaleType="centerCrop" />

							                 <LinearLayout
							                    android:id="@+id/menubar"
							                    android:layout_width="match_parent"
							                    android:layout_height="wrap_content"
							                    android:orientation="vertical" 
							                    android:layout_below="@+id/food_detail_3"
							                    android:background="@drawable/border"
							                    android:layout_margin="3dp" >
                    
										                <LinearLayout
										                   android:id="@+id/textView1"
										                   android:layout_width="match_parent"
										                   android:layout_height="wrap_content" 
										                   android:layout_below="@+id/food_detail_3" >

												                    <TextView
												                        android:id="@+id/textView2"
												                        android:layout_width="match_parent"
												                        android:layout_height="wrap_content"
												                        android:layout_margin="5dp"
												                        android:layout_weight="2"
												                        android:background="#ffffff"
												                        android:gravity="center_horizontal"
												                        android:text="메뉴판"
												                        android:textColor="#8B4513"
												                        android:textSize="60px"
												                        android:textStyle="bold" />

                										</LinearLayout>

										                <ImageView
										                    android:id="@+id/food_menu"
										                    android:layout_width="match_parent"
										                    android:layout_height="wrap_content"
										                    android:layout_margin="5dp"
										                    android:layout_weight="8"
										                    android:adjustViewBounds="true"
										                    android:focusableInTouchMode="true"
										                    android:scaleType="centerCrop" />
											</LinearLayout>
		
											<LinearLayout
												android:id="@+id/table1"
												android:orientation="vertical"
												android:layout_width="match_parent"
												android:layout_height="wrap_content"
												android:background="@drawable/border"
												android:layout_marginTop="0dp"
												android:layout_marginLeft="3dp"
												android:layout_marginRight="3dp"
												android:layout_marginBottom="7dp"
												android:paddingBottom="5dp"
												android:layout_below="@+id/menubar">

													<TableLayout
													    android:layout_width="match_parent"
													    android:layout_height="wrap_content" >

															    <TableRow
															        android:id="@+id/tableRow1"
															        android:layout_width="wrap_content"
															        android:layout_height="wrap_content" >
        
																	        <TextView
																	            android:padding="10dp"
																	            android:text=""
																	            android:textSize="40px"/>

																	        <TextView
																	            android:padding="10dp"
																	            android:text="�ְ��� ��! �ְ��� ����! �̽�������!"
																	            android:textSize="40px" />
    															</TableRow>

															    <TableRow
															        android:id="@+id/tableRow4"
															        android:layout_width="wrap_content"
															        android:layout_height="wrap_content" >
															
																            <ImageButton
																                android:id="@+id/call_icon1_1"
																                android:layout_width="40dp"
																                android:layout_height="40dp"
																                android:background="#ffffff"
																                android:scaleType="centerInside"
																                android:src="@drawable/btn_call_restaurant" />
																            
																	       <TextView
																	            android:id="@+id/txtAutoWeb"
																	            android:layout_width="match_parent"
																	            android:layout_height="wrap_content"
																	       		android:autoLink="phone"
																	            android:padding="10dp"
																	            android:text="010-9130-0112"
																	            android:background="#ffffff"
																	            android:textSize="30px" />
															 	</TableRow>
 
															    <TableRow
															        android:id="@+id/tableRow5"
															        android:layout_width="wrap_content"
															        android:layout_height="wrap_content" >
															
																		    <ImageButton
																		        android:id="@+id/map_icon1_1"
																		        android:layout_width="40dp"
																		        android:layout_height="40dp"
																		        android:background="#ffffff"
																		        android:scaleType="centerInside"
																		        android:layout_marginLeft="3dp"
																		        android:layout_marginBottom="3dp"
																		        android:src="@drawable/icon_map" />
																		            
																		     <TextView
																		          android:id="@+id/txtAutoWeb"
																		          android:layout_width="match_parent"
																		          android:layout_height="wrap_content"
																		     	  android:autoLink="map"
																		          android:padding="10dp"
																		          android:text="����Ư���� ���ʱ� ����4�� 1316-29"
																		          android:layout_marginRight="9dp"
																		          android:layout_marginBottom="5dp"
																		          android:background="#ffffff"
																		          android:textSize="30px" />
															 	</TableRow>
													</TableLayout>
										</LinearLayout>

										<LinearLayout
										    android:layout_width="match_parent"
										    android:layout_height="wrap_content"
										    android:orientation="vertical"
										    android:layout_below="@+id/table1" >

												    <TableLayout
												        android:layout_width="match_parent"
												        android:layout_height="wrap_content" >

														        <TableRow
														            android:id="@+id/tableRow2"
														            android:layout_width="wrap_content"
														            android:layout_height="wrap_content" >
																		     
																	        <TextView
																	            android:id="@+id/txtAutoWeb3"
																	            android:layout_width="match_parent"
																	            android:layout_height="wrap_content"
																	       		android:autoLink="map"
																	            android:padding="10dp"
																	            android:text=""
																	            android:background="#ffffff"
																	            android:textSize="30px" />
														        </TableRow>
    												</TableLayout>
										</LinearLayout>				
           					</RelativeLayout>			
			</LinearLayout>

	</ScrollView>

	<LinearLayout
	    android:id="@+id/box4"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:baselineAligned="true"
	    android:orientation="horizontal"
	    android:background="#ff8c00" >
	    
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="거리:"
					android:layout_gravity="center"
					android:textSize="30dp"
					android:layout_weight="1" />
	    
			    <TextView
			        android:id="@+id/ibeacondetail_Distance"
			        android:layout_width="100dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:layout_gravity="center"
			        android:textSize="30dp"
			        android:visibility="visible" />
	
			    <ImageButton
			        android:id="@+id/menu_icon4"
			        android:layout_width="65dp"
			        android:layout_height="45dp"
			        android:layout_gravity="center"
			        android:layout_weight="1"
			        android:background="#ff8c00"
			        android:scaleType="centerInside"
			        android:src="@drawable/btn_menu" />
			    
			     <ImageButton
			         android:id="@+id/map_icon"
			         android:layout_width="65dp"
			         android:layout_height="45dp"
			         android:layout_gravity="center"
			         android:layout_weight="1"
			         android:background="#ff8c00"
			         android:scaleType="centerInside"
			         android:src="@drawable/btn_map" />
			
			    <ImageButton
			        android:id="@+id/sharelogo"
			        android:layout_width="65dp"
			        android:layout_height="45dp"
			        android:layout_gravity="center"
			        android:layout_weight="1"
			        android:background="#ff8c00"
			        android:scaleType="centerInside"
			        android:src="@drawable/btn_share" />
	</LinearLayout>            
</RelativeLayout>
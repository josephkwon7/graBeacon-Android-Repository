<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pebBletestapp.MainActivity$PlaceholderFragment" >
    
     <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bar_title" 
        >

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Tasty Road"
            android:background="#FF0000"
            android:textColor="#FFD700"
            android:typeface="serif"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="17dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            
            android:background="@drawable/btn_back" />
        
        <Button android:id="@+id/btn_Connect" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_login" 
            android:layout_marginBottom="30dp" 
            android:text="connect" 
            android:textColor="#FFD700" />


    
        
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_bar"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="332dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/box1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <RelativeLayout
                    android:id="@+id/division_line"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#8d8c8c"
                    android:visibility="invisible" >
                </RelativeLayout>

                <TextView
                    android:id="@+id/ibeacondetail_SSID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_MacAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_UUID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Minor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_SSID_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSID"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_MacAddr_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MacAddr"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_UUID_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UUID"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Major_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Major"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Minor_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minor"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/asdfd" />
                  <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_below="@+id/imageView1"
                    android:src="@drawable/piza1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_below="@+id/imageView2"
                    android:src="@drawable/asdfds" />

                <LinearLayout
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                     android:layout_below="@+id/imageView3"
                     
                    >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:textColor="#FFD700"
                        android:gravity="center_horizontal"
                        android:text="메뉴판"
                        android:textSize="60px" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                     android:layout_below="@+id/textView1"
                    android:src="@drawable/abx" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_below="@+id/imageView4"
                   >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         >
                         <TextView android:text="상호명" android:textSize="40px" android:padding="10dp"/>
                   		 <TextView android:text="미스터피자(강남점)" android:textSize="40px" android:padding="10dp"/>
                   		
                 </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                   		 
                          <TextView android:text="주소" android:textSize="30px" android:padding="10dp"/>
                   		 <TextView android:text="서울특별시 서초구 서초4동  1316-29" android:textSize="30px" android:padding="10dp"/>
                   		
                    </TableRow>
                    
                       <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                   		 
                          <TextView android:text="업주이름" android:textSize="30px" android:padding="10dp"/>
                   		 <TextView android:text="미스터김" android:textSize="30px" android:padding="10dp"/>
                   		
                    </TableRow>
                       <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                   		 
                          <TextView android:text="전화번호" android:textSize="30px" android:padding="10dp"/>
                   		 <TextView android:text="02-2220-9292" android:textSize="30px" android:padding="10dp"/>
                   		
                    </TableRow>

              
                </TableLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <RelativeLayout
                    android:id="@+id/division_line1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#8d8c8c"
                    android:visibility="invisible" >
                </RelativeLayout>

                <TextView
                    android:id="@+id/ibeacondetail_MPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Rssi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/ibeacondetail_Proximity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_MPower_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Measured Power"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Rssi_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RSSI"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Distance_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                   
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ibeacondetail_Proximity_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proximity"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/box3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" 
                android:visibility="invisible">

                <RelativeLayout
                    android:id="@+id/division_line2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#8d8c8c" 
                    android:visibility="invisible">
                </RelativeLayout>

                <TextView
                    android:id="@+id/ibeacondetail_connected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/division_line2"
                    android:visibility="invisible"
                    android:text="1" />

                <TextView
                    android:id="@+id/ibeacondetail_TX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ibeacondetail_connected"
                    android:visibility="invisible"
                    android:text="1" />

                <TextView
                    android:id="@+id/ibeacondetail_Interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ibeacondetail_TX"
                    android:visibility="invisible"
                    android:text="1" />

                <TextView
                    android:id="@+id/ibeacondetail_Battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ibeacondetail_Interval"
                    android:visibility="invisible"
                    android:text="1" />

                <RelativeLayout
                    android:id="@+id/division_line3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/ibeacondetail_Battery"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:background="#8d8c8c" >
                </RelativeLayout>

                <TextView
                    android:id="@+id/ibeacondetail_Hardware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/division_line3"
                    android:visibility="invisible"
                    android:text="1" />

                <TextView
                    android:id="@+id/ibeacondetail_Firmware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/ibeacondetail_Hardware"
                    android:visibility="invisible"
                    android:text="1" />

                <TextView
                    android:id="@+id/ibeacondetail_connected_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/division_line2"
                    android:text="Connected"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/ibeacondetail_TX_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ibeacondetail_connected_Text"
                    android:visibility="invisible"
                    android:text="TX Power" />

                <TextView
                    android:id="@+id/ibeacondetail_Interval_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ibeacondetail_TX_Text"
                    android:visibility="invisible"
                    android:text="Interval" />

                <TextView
                    android:id="@+id/ibeacondetail_Battery_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ibeacondetail_Interval_Text"
                    android:visibility="invisible"
                    android:text="Battery Level" />

                <TextView
                    android:id="@+id/ibeacondetail_Hardware_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/division_line3"
                    android:visibility="invisible"
                    android:text="Hardware Version" />

                <TextView
                    android:id="@+id/ibeacondetail_Firmware_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ibeacondetail_Hardware_Text"
                    android:visibility="invisible"
                    android:text="Firmware Version" />

            </RelativeLayout>

            

        </LinearLayout>

    </ScrollView>

<LinearLayout
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_height="40dp"
        android:layout_weight="3" />


    
      

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:scaleType="centerCrop"
        android:src="@drawable/menu4" />


           <ImageButton
           android:id="@+id/imageButton2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            android:src="@drawable/share" />
  

</LinearLayout>
            
 </RelativeLayout>